{
  "name": "pnpm-ci-tools",
  "version": "1.0.0",
  "description": "CI commands for pnpm",
  "keywords": [
    "pnpm",
    "audit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/drtyh2o/pnpm-ci-tools.git"
  },
  "license": "MIT",
  "author": "Michael Durling",
  "main": "dist/index.js",
  "bin": {
    "pnpm-ci": "./bin/pnpm-ci-tools",
    "pnpm-ci-tools": "./bin/pnpm-ci-tools"
  },
  "files": [
    "dist/",
    "bin/"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "pnpm clean:only && pnpm install",
    "clean:only": "git clean -fdX -e '!.pnpm' -e '!.pnpm/**'",
    "postinstall": "npx only-allow pnpm && husky install",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "pnpm lint -- --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "pretest": "pnpm build",
    "test": "bin/pnpm-ci audit"
  },
  "dependencies": {
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@types/node": "14.14.27",
    "@types/yargs": "16.0.0",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.0.9",
    "lint-staged": "10.5.4",
    "pinst": "2.1.4",
    "prettier": "2.2.1",
    "prettier-plugin-packagejson": "2.2.9",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  }
}
